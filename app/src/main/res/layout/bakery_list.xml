<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardMaxElevation="@dimen/card_max_elevation"
    card_view:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/colorPrimaryLight"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView android:id="@+id/bakery_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bakeryList"
                android:layout_marginLeft="16dp"
                android:gravity="center" />

            <TextView android:id="@+id/servings_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/servings"
                android:layout_marginLeft="16dp"
                android:gravity="bottom"/>

        </LinearLayout>

        <ImageView android:id="@+id/bakery_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

    </LinearLayout>

</android.support.v7.widget.CardView>