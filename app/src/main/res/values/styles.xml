<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="servings">
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">Monospace</item>
    </style>

    <style name="steps">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif-monospace</item>
        <item name="android:textSize">25dp</item>
    </style>


</resources>
